#!/bin/bash

DOCKER_BUILDKIT=1
BUILDKIT_PROGRESS=plain
MYSQL_ROOT_PASSWORD=test

if [[ "x${DOCKER_TAG}" == "x5" ]]; then
    mysql_version=5
else
    mysql_version=8
fi

docker build \
    --build-arg MYSQL_ROOT_PASSWORD="${MYSQL_ROOT_PASSWORD:-test}" \
    --build-arg mysql_version="${mysql_version:-8}" \
    -f "${DOCKERFILE_PATH}" \
    -t "${IMAGE_NAME}" .